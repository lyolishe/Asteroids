{
  "compilerOptions": {
    "importHelpers": true,
    "target": "es5",
    "lib": ["dom", "es2018"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "baseUrl": ".",
    "typeRoots": [
        "./@types"
    ],
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
      "@classes": [
        "./src/classes"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
